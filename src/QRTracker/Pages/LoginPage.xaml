<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRTracker.Pages.LoginPage"
             Title="Anmeldung"
             AutomationProperties.AutomationId="LoginPage">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Bitte geben Sie Ihre Firmen-E-Mail-Adresse ein und melden Sie sich anschlieÃŸend an." />
        <Entry x:Name="EmailEntry"
               AutomationProperties.AutomationId="LoginEmailEntry"
               Placeholder="name@firma.de"
               Keyboard="Email" />
        <Button x:Name="LoginActionButton"
                AutomationProperties.AutomationId="LoginActionButton"
                Text="Jetzt anmelden"
                Clicked="OnLogin" />
        <Button Text="QR-Code scannen"
                AutomationProperties.AutomationId="LoginScanButton"
                Clicked="OnScan" />
    </VerticalStackLayout>
</ContentPage>
